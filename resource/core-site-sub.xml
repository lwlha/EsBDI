<!-- 指定 hdfs 的 nameservice 为 myha01 -->\
  <property>\
    <name>fs.defaultFS</name>\
    <value>hdfs://${cluster_name}</value>\
  </property>\
\
<!-- 指定 hadoop 工作目录 -->\
  <property>\
    <name>hadoop.tmp.dir</name>\
    <value>${hadoop_workspace}</value>\
  </property>\
\
<!-- 指定 zookeeper 集群访问地址 -->\
  <property>\
    <name>ha.zookeeper.quorum</name>\
    <value>${zookeeper_cluster_address}</value>\
  </property>