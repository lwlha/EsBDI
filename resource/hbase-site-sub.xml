\
<!-- 指定hbase在HDFS上存储的路径 -->\
  <property>\
    <name>hbase.rootdir</name>\
    <value>${hbase_rootdir}</value>\
  </property>\
\
<!-- 指定hbase是分布式的 -->\
  <property>\
    <name>hbase.cluster.distributed</name>\
    <value>true</value>\
  </property>\
\
<!-- 指定zk的地址，多个用“,”分割 -->\
  <property>\
    <name>hbase.zookeeper.quorum</name>\
    <value>${zookeeper_cluster_address}</value>\
  </property>